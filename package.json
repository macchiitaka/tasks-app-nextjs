  "scripts": {
    "build": "pathpida --enableStatic && next build",
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:path": "pathpida --enableStatic --watch",
    "fmt": "run-p fmt:**",
    "fmt:eslint": "eslint '**/*.{js,jsx,ts,tsx}' --fix --cache",
    "fmt:json": "prettier --write '**/*.json'",
    "fmt:md": "prettier --write '**/*.md'",
    "fmt:package-json": "sort-package-json",
    "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx}' --cache",
    "start": "next start"
  },
  "dependencies": {
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "next": "^10.0.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sort-package-json": "^1.48.0",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/prettier": "^2.1.6",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "@typescript-eslint/typescript-estree": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "eslint-plugin-unicorn": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.10.2",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x",
    "yarn": "1.x"
  }
